<%- include('partials/header', { title: 'Donate to ' + campaign.title, user }) %>

<section class="form-section">
  <div class="form-container">
    <h2>Support "<%= campaign.title %>"</h2>
    <p><%= campaign.description %></p>

    <form action="/donations/<%= campaign.campaign_id %>" method="POST" class="form">
      <label for="donor_name">Your Name:</label>
      <input type="text" name="donor_name" id="donor_name" placeholder="e.g. Jane Doe" required>

      <label for="donor_email">Your Email:</label>
      <input type="email" name="donor_email" id="donor_email" placeholder="e.g. jane@example.com" required>

      <label for="amount">Donation Amount ($):</label>
      <input type="number" name="amount" id="amount" placeholder="e.g. 50" min="1" step="1" required>

      <button type="submit" class="btn">Donate Now ðŸ’–</button>
    </form>
  </div>
</section>

<%- include('partials/footer') %>