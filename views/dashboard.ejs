<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard | Flowst8Funds</title>
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="mb-4">Welcome, <%= user.full_name %> ðŸ‘‹</h2>
    <a href="/create" class="btn btn-primary mb-3">+ New Campaign</a>
    
    <% if (campaigns.length === 0) { %>
      <p>You have no campaigns yet. Create one to get started!</p>
    <% } else { %>
      <div class="list-group">
        <% campaigns.forEach(campaign => { %>
          <div class="list-group-item mb-3">
            <h5><%= campaign.title %></h5>
            <p><%= campaign.description || "AI is still generating the campaign content..." %></p>
            <p><strong>Goal:</strong> $<%= campaign.goal_amount %></p>
            <p><strong>Generated Message:</strong> <%= campaign.ai_social_post %></p>
          </div>
        <% }) %>
      </div>
    <% } %>

    <a href="/logout" class="btn btn-secondary mt-4">Logout</a>
  </div>
</body>
</html>