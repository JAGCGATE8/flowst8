<div class="dashboard">
  <h2>Welcome, <%= user.full_name %> ğŸ‘‹</h2>
  <a href="/campaigns/create"><button class="primary-btn">+ Create New Campaign</button></a>

  <h3>Your Campaigns</h3>
  <% if (campaigns.length === 0) { %>
    <p>No campaigns yet. Create one to start fundraising!</p>
  <% } else { %>
    <ul class="campaign-list">
      <% campaigns.forEach(campaign => { %>
        <li class="campaign-box">
          <h4><%= campaign.title %></h4>
          <p><%= campaign.description %></p>
          <p><strong>Social Post:</strong> <em><%= campaign.ai_social_post %></em></p>
          <p>Goal: $<%= campaign.goal_amount %> | Raised: $<%= campaign.total_donations %></p>

          <div class="social-buttons">
            <a href="https://www.facebook.com/sharer/sharer.php?u=https://your-ngrok-url.ngrok.io/share/<%= campaign.campaign_id %>" target="_blank">ğŸ“˜ Facebook</a>
            <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(campaign.ai_social_post) %>&url=https://your-ngrok-url.ngrok.io/share/<%= campaign.campaign_id %>" target="_blank">ğŸ¦ Twitter</a>
            <a href="https://www.instagram.com/?url=https://your-ngrok-url.ngrok.io/share/<%= campaign.campaign_id %>" target="_blank">ğŸ“¸ Instagram</a>
            <a href="https://www.tiktok.com/upload?url=https://your-ngrok-url.ngrok.io/share/<%= campaign.campaign_id %>" target="_blank">ğŸµ TikTok</a>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <a href="/logout"><button class="secondary-btn">Logout</button></a>
</div>

<%- include('partials/footer') %>